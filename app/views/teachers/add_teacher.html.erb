<h2>Create New Teacher</h2>

  <%= form_for(@user, url: "/teachers_index", html: {method: "post"}) do |form| %>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      <%end%>
      </ul>
    </div>

    <%= render partial: '/users/form', object: form %>

    <%= fields_for(@user.teachers.new) do |x| %>

    <div class="text-field">
    <%= x.label :name %>
    <%= x.text_field :name%>
    </div>

    <div class="text-field">
    <%= x.label :phone_number %>
    <%= x.text_field :phone_number%>
    </div>


     <% end %>
    <div class="action">
      <%= form.submit "Add!" %>
    </div>
  <% end %>
</div>
